{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "600000",
    "BASH_MAX_TIMEOUT_MS": "1200000"
  },
  "permissions": {
    "allow": [
      "WebFetch",
      "Bash(pnpm lint:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm install:*)",
      "Bash(git status:*)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git branch:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git reset:*)",
      "Bash(git stash:*)",
      "Bash(git remote:*)",
      "Bash(git describe:*)",
      "Bash(gh pr:*)",
      "Bash(gh workflow:*)",
      "Bash(gh run:*)",
      "Bash(jq:*)",
      "Bash(sed:*)",
      "mcp__playwright",
      "mcp__serena",
      "Read(~/Library/Application Support/CleanShot/media/**)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)"
    ],
    "defaultMode": "acceptEdits"
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754089603222
  }
}
